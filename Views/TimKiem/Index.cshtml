<link rel="stylesheet" href="~/css/timkiem.css" asp-append-version="true" />

<section class="opac-page" style="margin-top:50px; margin-bottom:80px; padding-left:30px; padding-right:30px">
    <!-- Header -->
    <header class="page-header">
        <h2><i class="glyphicon glyphicon-search"></i> Tra cứu — OPAC</h2>
    </header>

    <!-- Search bar + actions -->
    <div class="well search-area" style="margin-top:20px;">
        <div class="row">
            <div class="col-sm-9">
                <div class="input-group input-group-lg">
                    <input id="opac-search" type="text" class="form-control" placeholder="Nhập tiêu đề, tác giả, từ khóa...">
                    <span class="input-group-btn">
                        <button id="btn-search" class="btn btn-primary"><i class="glyphicon glyphicon-search"></i> Tìm</button>
                    </span>
                </div>
                <div class="text-muted small" style="margin-top:8px;">
                    <label class="checkbox-inline"><input type="checkbox" id="chk-fulltext"> Tìm toàn văn</label>
                    <label class="checkbox-inline"><input type="checkbox" id="chk-hasfile"> Có bản số</label>
                    <label class="checkbox-inline"><input type="checkbox" id="chk-vn"> Tiếng Việt</label>
                </div>
            </div>

            <div class="col-sm-3 text-right">
                <div class="btn-group" role="group" aria-label="view">
                    <button id="view-grid" class="btn btn-default active" title="Grid"><i class="glyphicon glyphicon-th-large"></i></button>
                    <button id="view-list" class="btn btn-default" title="List"><i class="glyphicon glyphicon-align-justify"></i></button>
                </div>
                <div class="dropdown" style="display:inline-block; margin-left:8px;">
                    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Sắp xếp <span class="caret"></span></button>
                    <ul class="dropdown-menu" id="sort-menu">
                        <li><a href="#" data-sort="relevance">Phù hợp</a></li>
                        <li><a href="#" data-sort="date_desc">Mới nhất</a></li>
                        <li><a href="#" data-sort="date_asc">Cũ nhất</a></li>
                        <li><a href="#" data-sort="views_desc">Lượt xem</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default filter-top">
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-2">
                    <select id="filter-subject" class="form-control">
                        <option value="">Chủ đề</option>
                        <option>Khoa học</option>
                        <option>Văn học</option>
                        <option>Lịch sử</option>
                        <option>Công nghệ</option>
                        <option>Giáo dục</option>
                    </select>
                </div>
                <div class="col-sm-2">
                    <select id="filter-type" class="form-control">
                        <option value="">Loại tài liệu</option>
                        <option>Sách</option>
                        <option>Tạp chí</option>
                        <option>Luận văn</option>
                        <option>Tài liệu số</option>
                    </select>
                </div>
                <div class="col-sm-2">
                    <input id="year-from" class="form-control" placeholder="Từ năm">
                </div>
                <div class="col-sm-2">
                    <input id="year-to" class="form-control" placeholder="Đến năm">
                </div>
                <div class="col-sm-2">
                    <button id="btn-reset" class="btn btn-default btn-block">Đặt lại</button>
                </div>
                <div class="col-sm-2">
                    <button id="btn-apply" class="btn btn-primary btn-block">Lọc</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <div class="row">
        <main class="col-sm-12">
            <div class="results-info clearfix" style="margin-bottom:12px;">
                <span id="results-count" class="text-muted"></span>
                <div class="pull-right">
                    <small class="text-muted">Hiển thị</small>
                    <select id="per-page" class="form-control input-sm" style="display:inline-block; width:auto;">
                        <option>6</option>
                        <option>12</option>
                        <option>24</option>
                    </select>
                </div>
            </div>

            <!-- container for results -->
            <div id="results-container" class="row"></div>

            <!-- pagination -->
            <nav id="results-pagination" aria-label="Page navigation" class="text-center" style="margin-top:18px;">
                <ul class="pagination"></ul>
            </nav>
        </main>
    </div>

    <!-- Modal: chi tiết tài liệu -->
    <div id="modal-detail" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Chi tiết tài liệu</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-4"><img id="detail-img" src="" class="img-responsive img-rounded" alt=""></div>
                        <div class="col-sm-8">
                            <h3 id="detail-title"></h3>
                            <p id="detail-meta" class="text-muted"></p>
                            <p id="detail-desc"></p>
                            <div>
                                <button id="btn-download" class="btn btn-success"><i class="glyphicon glyphicon-download"></i> Tải về</button>
                                <button class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Đóng</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    <script src="~/js/timkiem.js"></script>
}